<h3>以下の内容で、送信する。</h3>

<%= form_for(@recipe) do |f| %>
<%= f.hidden_field :name %>
<%= f.hidden_field :explain %>
<%= f.hidden_field :ingredients %>
<%= f.hidden_field :directions %>
<%= hidden_field_tag :"cache[image]", @recipe.image.cache_name %>

<p><%= @recipe.name %></p>
<p><%= @recipe.explain %></p>
<p><%= @recipe.ingredients %></p>
<p><%= @recipe.directions %></p>
<%= image_tag(@recipe.image.url) %>
<br>
<%= f.submit "投稿する", class: 'btn btn-default' %>
<% end %>

<%= form_for(@recipe,url:new_recipe_path, method:'get') do |f| %>
<%= f.hidden_field :name %>
<%= f.hidden_field :explain %>
<%= f.hidden_field :ingredients %>
<%= f.hidden_field :directions %>
<%= f.submit "戻る" , name:'back', class: 'btn btn-default'%>
<% end %>

<p id="notice"><%= notice %>

<div class="form-horizontal" role="form">
  <%= form_for(@recipe,url:choose_new_or_edit) do |f| %>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-10">
        <% if @recipe.errors.any? %>
          <div id="error_explanation">
            <h2><%= @recipe.errors.count %>件のエラーがあります。</h2>
            <ul>
              <% recipe.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>

  <div class="form-group">
    <%= f.label :name, class: 'col-sm-3 control-label' %>
    <div class="col-sm-7">
    <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <br>

  <div class="form-group">
    <%= f.label :explain, class: 'col-sm-3 control-label'  %>
    <div class="col-sm-7">
    <%= f.text_area :explain,class: 'form-control', rows: 5  %>
    </div>
  </div>
  <br>

  <div class="form-group">
    <%= f.label :ingredients, class: 'col-sm-3 control-label'  %>
    <div class="col-sm-7">
    <%= f.text_area :ingredients,class: 'form-control', rows: 5  %>
    </div>
  </div>
  <br>

  <div class="form-group">
    <%= f.label :directions, class: 'col-sm-3 control-label'  %>
    <div class="col-sm-7">
    <%= f.text_area :directions,class: 'form-control', rows: 5  %>
    </div>
  </div>
  <br>

  <%=f.submit'投稿', class: 'btn btn-default' %>
  <% end %>
  </div>
  <div class="link-index">
  <%= link_to "レシピ一覧に戻る",recipes_path, class: 'btn btn-default'%>
  </div>

<p id="notice"><%= notice %></p>
<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <div class="recipe-text">
      <p class="left"><strong>レシピ名</strong></p>
      <p class="left"><%= @recipe.name %></p>
      <p class="left"><strong>説明</strong></p>
      <p class="left"><%= @recipe.explain %></p>
      <p class="left"><strong>材料</strong></p>
      <p class="left"><%= @recipe.ingredients %></p>
      <p class="left"><strong>作り方</strong></p>
      <p class="left"><%= @recipe.directions %></p>
      <div class="left"><%= image_tag(@recipe.image) %>
      <p class="right">
        <strong>recipe by:</strong>
        <%= @recipe.user.name %>
        <br>
        <strong>creation time:</strong>
        <%= @recipe.created_at.strftime("%y/%m/%d %p %l:%M") %>
      </p>
    </div>

    <p>コメント一覧</p>
    <div id="comments_area">
      <%= render partial: 'comments/index', locals: { comments: @comments, recipe: @recipe } %>
    </div>
    <%= render partial: 'comments/form', locals: { comment: @comment, recipe: @recipe } %>
    <div class="gap"></div>
    <% if current_user.id == @recipe.user_id %>
      <%= link_to 'レシピ編集', edit_recipe_path(@recipe) %> |
    <% end %>
    <%= link_to '戻る', recipes_path %>
  </div>
</div>

%div#recipe-js
- if recipe.like_user(current_user.id)
  = link_to recipe_like_path(recipe, recipe.like_user(current_user)), method: :delete, class: 'heart-icon', remote: true do
    .btn.btn-default.fa.fa-heart.fa-x.heart-red
      =recipe.likes.count.to_s
- else
  =link_to recipe_likes_path(recipe), method: :post, class: 'empty-heart', remote: true do
    .btn.btn-default.fa.fa-heart.fa-x.heart-color
      =recipe.likes.count.to_s

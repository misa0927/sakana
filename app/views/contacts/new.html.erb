<div class="container">
        <h1>お問い合わせフォーム</h1>
        <div class="form-horizontal" role="form">
          <%=form_for(@contact,url:confirm_contacts_path) do |f| %>
          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-10">
              <% if @contact.errors.any? %>
              <div id="error_explanation">
                <h2><%= @contact.errors.count %>件のエラーがあります。</h2>
                  <ul>
                    <% @contact.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
                <% end %>
              </div>
            </div>

  <div class="form-group">
    <%=f.label :名前, class: 'col-sm-3 control-label' %>
    <div class="col-sm-7">
    <%=f.text_field :name, class:'form-control' %>
    </div>
  </div>
  <br>
  <div class="form-group">
    <%=f.label :メール, class: 'col-sm-3 control-label' %>
    <div class="col-sm-7">
    <%=f.text_field :email, class:'form-control' %>
    </div>
  </div>
  <br>
    <div class="form-group">
    <%=f.label :お問い合わせ内容, class: 'col-sm-3 control-label' %>
    <div class="col-sm-7">
    <%=f.text_area :content,class: 'form-control', rows: 5 %>
    </div>
  </div>
  <br>

    <%=f.submit'送信',class:'btn btn-default'%>
    <% end %>
    </div>
</div>
